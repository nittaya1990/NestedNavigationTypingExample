{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "baseUrl": ".",
    "jsx": "react-native",
    "lib": [
      "dom",
      "esnext"
    ],
    "types": [
      "node",
    ],
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "target": "ES5"
  },
  "exclude": [
    "node_modules",
    "**/*.js",
    "**/*.jsx",
    ".storybook",
    "**/*.test?(.*).+(ts|tsx)"
  ]
}
